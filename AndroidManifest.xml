<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.statthat"
    android:versionCode="1"
    android:versionName="1.0" >
	<uses-permission android:name="android.permission.RECORD_AUDIO" />
	<uses-permission android:name="android.permission.INTERNET" />
	
    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="DATABASE"
            android:value="stat.db" />
        <meta-data
            android:name="VERSION"
            android:value="6" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />

        <activity
            android:name="com.example.statthat.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.statthat.TeamSelect"
            android:label="@string/title_activity_team_select" >
        </activity>
        <activity
            android:name="com.example.statthat.GameActivity"
            android:label="@string/title_activity_game" >
        </activity>
        <activity
            android:name="com.example.statthat.TeamPageActivity"
            android:label="@string/title_activity_team_page" >
        </activity>
        <activity
            android:name="com.example.statthat.NewGame"
            android:label="@string/title_activity_new_game" >
        </activity>
        <activity
            android:name="com.example.statthat.GameSetup"
            android:label="@string/title_activity_game_setup" >
        </activity>
        <activity
            android:name="com.example.statthat.RecordStat"
            android:label="@string/title_activity_record_stat" >
        </activity>
        <activity
            android:name="com.example.statthat.NewTeam"
            android:label="@string/title_activity_new_team" >
        </activity>
        <activity
            android:name="com.example.statthat.NewPlayerActivity"
            android:label="@string/title_activity_new_player" >
        </activity>
        <activity
            android:name="com.example.statthat.GamePlayersActivity"
            android:label="@string/title_activity_game_players" >
        </activity>
        <activity
            android:name="com.example.statthat.TeamPageStatsActivity"
            android:label="@string/title_activity_team_page_stats" >
            android:name="com.example.statthat.RecordAction_old"
            android:label="@string/title_activity_record_action" >
        </activity>
    </application>

</manifest>
