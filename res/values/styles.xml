<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="Label">
        <item name="android:textColor">#0099CC</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="Background">
		<item name='android:background'>#E0E4CC</item>
	</style>
	
    <style name="Confirm"></style>
    <style name="Cancel"></style>
    <style name="Font"></style>
    <style name="TitleBar">
        <item name='android:background'>#F38630</item>
    </style>
    <style name="Button"></style>
    
    <style name="buttonStyleCancel" parent="@android:style/Widget.Button">
       <item name="android:textSize">20sp</item>
       <item name="android:gravity">center</item>
       <item name="android:background">@drawable/custom_button_cancel</item>
       <item name="android:padding">10dip</item>
   </style>
    
    <style name="buttonStyleConfirm" parent="@android:style/Widget.Button">
       <item name="android:textSize">20sp</item>
       <item name="android:gravity">center</item>
       <item name="android:background">@drawable/custom_button_confirm</item>
       <item name="android:padding">10dip</item>
   </style>

</resources>
