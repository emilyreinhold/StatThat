<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameSetup" >
    
   <FrameLayout         
   	style="@style/TitleBar"
    android:id="@+id/title_bar"
    android:layout_width="fill_parent"
    android:layout_height="65dp">
	   
	   <!-- Title  -->
	   <Button 
	       android:text="Back"
	       android:id="@+id/back_button"
	       android:gravity="center_vertical"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"/>
	   <TextView      	           
	       android:layout_width="match_parent"
	       android:layout_height="match_parent"
	       android:gravity="center"
	       android:text="Game Setup"/>
    
    </FrameLayout>
	
   <!-- Form -->
   <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_below="@+id/title_bar"
       android:layout_centerHorizontal="true"
       android:orientation="vertical" >
	   
       <!-- Game Location -->
       <TextView
           android:id="@+id/game_location_label"
           android:layout_width='fill_parent'
           android:layout_height='wrap_content'
           android:text="Game Location"/>
       
       <View 
		   android:layout_width="fill_parent"
		   android:layout_height="1dp"       
		   android:background="#ffffff" />

       <EditText
           android:id="@+id/game_location"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:ems="10" >

           <requestFocus />
       </EditText>
       
       <!-- Game Date -->
       <TextView
           android:id="@+id/game_date_label"
           android:layout_width='fill_parent'
           android:layout_height='wrap_content'/>

       <EditText
           android:id="@+id/game_date"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:ems="10" >

           <requestFocus />
       </EditText>
       
       <!-- Game Notes -->
       <TextView
           android:id="@+id/game_notes_label"
           android:layout_width='fill_parent'
           android:layout_height='wrap_content'/>

       <EditText
           android:id="@+id/game_notes"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:ems="10" >

           <requestFocus />
       </EditText>
       
   </LinearLayout>

</RelativeLayout>
