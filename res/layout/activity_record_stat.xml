<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".RecordStat" 
    style="@style/Background">

    <!-- Top row buttons -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
	    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        <Button
	            style="@style/buttonStyleConfirm"
	            android:id="@+id/done_button"
	            android:layout_weight="1.0"
	            android:layout_margin="2dp"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Done"/>
	        <Button
	            style="@style/buttonStyleCancel"
	            android:id="@+id/edit_game_button"
	            android:layout_weight="1.0"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_margin="2dp"
	            android:text="Edit Stat"/>
	        
	        <!-- Game Clock -->
	        <LinearLayout 
	            android:id="@+id/game_clock_layout"
	            android:layout_weight="1.0"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal"
	            android:orientation="vertical">
	            <TextView
	                android:id="@+id/game_clock_label"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Game Clock"/>
	
	            <Chronometer
	                android:id="@+id/clock"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:gravity="center"
	                android:text="Chronometer"/>
	
	        </LinearLayout>
	
	            
	    </LinearLayout>
    </RelativeLayout>
    
    <!-- Stats and clock buttons -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
	   
        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="1.0"
	        android:orientation="horizontal"
	        android:layout_above="@+id/record_button_layout">
	   
		    <!-- Recent Stats -->
		    <TableLayout
		        android:id="@+id/recent_stats_table"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:paddingTop="5dp"
		        android:layout_weight="1.0">
		        
		        <!-- Table Headers -->
		        <TableRow
		            android:id="@+id/headers"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content">
		            
		            <!-- Player -->
		            <TextView
		              android:id="@+id/player_header"
					  android:textColor="@android:color/black"
					  android:layout_margin="1dp"
					  android:gravity="center_horizontal"
					  android:layout_weight="1"
					  android:text="Player #" />
		            
		            <!-- Stat Type -->
					<TextView
					  android:id="@+id/stat_type_header"
					  android:textColor="@android:color/black"
					  android:gravity="center_horizontal"
					  android:layout_weight="1"
					  android:layout_margin="1dp"
					  android:background="@android:color/white"
					  android:text="Stat" />
					
					<!-- Result -->
					<TextView
					  android:id="@+id/result_header"
					  android:textColor="@android:color/black"
					  android:gravity="center_horizontal"
					  android:layout_weight="1"
					  android:layout_margin="1dp"
					  android:background="@android:color/white"
					  android:text="Result" />
					
					<!-- Time -->
					<TextView
					  android:id="@+id/time_header"
					  android:textColor="@android:color/black"
					  android:gravity="center_horizontal"
					  android:layout_weight="1"
					  android:layout_margin="1dp"
					  android:background="@android:color/white"
					  android:text="Time" />
		        </TableRow>
		        
		    </TableLayout>
		    
		    <!-- Clock Buttons -->
		    <LinearLayout 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
		        android:layout_alignParentRight='true' >
		        		    	
		       <Button
		            android:id="@+id/start_clock_button"
		            android:layout_width="75dp"
		            android:layout_height="75dp"
		            android:gravity="center_horizontal"
		            android:background="@drawable/play"
		            android:textSize="10dp"/>

		        
		       	<!-- Dividing Line  --> 
		    	<View
				   android:layout_width="fill_parent"
				   android:layout_height="1dp"
				   android:id="@+id/divider_line"
				   android:gravity="center_horizontal"
				   android:background="@android:color/black"/>
		    	
		    	<Button
		            android:id="@+id/next_quarter_button"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:gravity="center_horizontal"
		            style="@style/buttonStyleCancel"
		            android:layout_margin="2dp"
		            android:text="Next Quarter"
		            android:textSize="10dp"/>

		       
		       <Button
		            android:id="@+id/stop_clock_button"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:gravity="center_horizontal"
		            android:text="Stop Clock"
		            android:visibility="gone"
		            android:textSize="10dp"/>
		    </LinearLayout> <!-- End of clock buttons -->
		    
	  	
	  	</LinearLayout> 
	  	
	  	
	    <!-- Record Button -->
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_alignParentBottom="true"
	        android:id="@+id/record_button_layout" >
		    <Button 
		        style="@style/buttonStyleConfirm"
		        android:id="@+id/record_button"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:text="Record"/>
	    </LinearLayout>
	
	</RelativeLayout>
	
</LinearLayout> 
    
